  "version": "0.2.0",
  "configurations": [
    {
      "name": "recursion2",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/recursion2",
      "args": ["memo", "50"],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
